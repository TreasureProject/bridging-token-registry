{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://github.com/TreasureProject/bridging-token-registry/blob/main/schemas/erc20-schema.json",
    "title": "Treasure ERC20 Bridging Registry",
    "type": "object",
    "properties": {
        "tokens": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "existingToken": {
                        "type": "string",
                        "pattern": "^0x[a-fA-F0-9]{40}$"
                    },
                    "adapterAddress": {
                        "type": "string",
                        "pattern": "^0x[a-fA-F0-9]{40}$"
                    },
                    "oftAddress": {
                        "type": "string",
                        "pattern": "^0x[a-fA-F0-9]{40}$"
                    }
                },
                "required": [
                    "name",
                    "existingToken",
                    "adapterAddress",
                    "oftAddress"
                ]
            }
        }
    },
    "required": [
        "tokens"
    ]
}
